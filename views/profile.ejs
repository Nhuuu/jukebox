<h1><%= user.username %>'s Profile</h1>

<div class="row">
	<div class="col s3">
		<div>
			<img src="<%= user.image %>">
		</div>
		<div>
			<p><strong>Name: </strong><%= user.username %></p>
			<p><strong>Display Name: </strong><%= user.username %></p>
			<p><strong>User Status: </strong><%= user.admin ? 'Admin' : 'User' %></p>			
			<p><strong>Email: </strong><%= user.email %></p>
		</div>
	</div>
	<div class="col s9">
		<h3><%= user.username %>'s Bio</h3>
		<p><%= user.bio %></p>
	</div>
</div>

<div class="row">	
	<div class="col s12 m4 l8 playlistlist">
		<h4>playlists You Have Joined</h4>
		<% playlists.forEach(function(playlist){%>
			<ul>
				<a href="/playlist/guest?token=<%=playlist.token%>&action="><li><%=playlist.partyName%></li></a>
			</ul>
		<%})%>
		
	</div>
</div>