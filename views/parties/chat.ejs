<h3>This is a chat room</h3>

<div class="row chatBox">
  <div class="col s12 m6">
    <ul id="messages"></ul>
    <form action="/" method="POST" id="chatForm">
      <input id="txt" autocomplete="off" autofocus="on" placeholder="type your message here..." />
      <button class="btn waves-effect waves-light grey darken-4" type="submit" name="action">Send<i class="material-icons right">send</i></button>
    </form>
  </div>
</div>

<script>
    // submit text message without reload/refresh the page
    $('form').submit(function(e){
        e.preventDefault(); // prevents page reloading
        $('#txt').val('');
        return false;
    });
</script>